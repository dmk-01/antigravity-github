rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read for everyone
    match /{document=**} {
      allow read: if true;
    }
    // Allow write only for authenticated users
    match /site/{docId} {
      allow write: if request.auth != null;
    }
    match /gallery/{docId} {
      allow write: if request.auth != null;
    }
  }
}
